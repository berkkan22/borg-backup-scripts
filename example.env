# Example configuration for borg_backup_scripts
# Copy this file to .env and adjust all values.

# === Borg ===
# Passphrase for your Borg repository (keep this secret!)
BORG_PASSPHRASE="CHANGE_ME_STRONG_PASSPHRASE"

# === Authentik ===
AUTHENTIK_DIR="/home/youruser/docker-services/authentik"
AUTHENTIK_DB_CONTAINER="authentik-postgresql"
AUTHENTIK_DB_BACKUP_DIR="/home/youruser/docker-services/authentik/sql_dump_backups"

# === Budibase ===
BUDIBASE_DIR="/home/youruser/docker-services/budibase"
BUDIBASE_ENV_FILE="/home/youruser/docker-services/budibase/.env"
BUDIBASE_BACKUP_DIR="/home/youruser/docker-services/budibase/sql_dump_backups"

# === CouchDB ===
COUCHDB_DIR="/home/youruser/docker-services/couchdb"
COUCHDB_CONTAINER="obsidian-couchdb-sync"
COUCHDB_BACKUP_DIR="/home/youruser/docker-services/couchdb/db_backups"

# === DBMS ===
DBMS_DIR="/home/youruser/docker-services/dbms"
DBMS_CONTAINER="dbms"
DBMS_BACKUP_DIR="/home/youruser/docker-services/dbms/sql_dump_backups"

# === Directus ===
DIRECTUS_DIR="/home/youruser/docker-services/directus"
DIRECTUS_DB_CONTAINER="directus-db-1"
DIRECTUS_DB_BACKUP_DIR="/home/youruser/docker-services/directus/sql_dump_backups"

# === Mealie ===
MEALIE_DIR="/home/youruser/docker-services/mealie"
MEALIE_DB_CONTAINER="mealie-db-1"
MEALIE_DB_BACKUP_DIR="/home/youruser/docker-services/mealie/sql_dump_backups"

# === Nextcloud ===
NEXTCLOUD_CONTAINER="nextcloud-app-1"
NEXTCLOUD_DB_CONTAINER="nextcloud-db-1"
NEXTCLOUD_DB_USER="nextcloud"
NEXTCLOUD_DB_PASSWORD="CHANGE_ME_DB_PASSWORD"
NEXTCLOUD_DB_NAME="nextcloud"
NEXTCLOUD_DB_DUMP_DIR="/home/youruser/docker-services/nextcloud/sql_dump_backups/"

# === Paperless-ngx ===
PAPERLESS_DIR="/home/youruser/docker-services/paperless"
PAPERLESS_DB_CONTAINER="paperless-db-1"
PAPERLESS_WEBSERVER_CONTAINER="webserver"
PAPERLESS_DB_USER="paperless"
PAPERLESS_DB_PASSWORD="CHANGE_ME_DB_PASSWORD"
PAPERLESS_BACKUP_DIR="/home/youruser/docker-services/paperless/sql_dump_backups"

# === Umami ===
UMAMI_DIR="/home/youruser/docker-services/umami"
UMAMI_DB_CONTAINER="umami-db-1"
UMAMI_DB_BACKUP_DIR="/home/youruser/docker-services/umami/sql_dump_backups"

# === Warracker ===
WARRACKER_DIR="/home/youruser/docker-services/warracker"
WARRACKER_DB_CONTAINER="warracker-warrackerdb-1"
WARRACKER_DB_BACKUP_DIR="/home/youruser/docker-services/warracker/sql_dump_backups"

# Optional: notification email (if your scripts use it)
# NOTIFY_EMAIL="you@example.com"
